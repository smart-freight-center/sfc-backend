{
  "name": "sfc-backend",
  "version": "1.0.0",
  "main": "src/server.ts",
  "repository": "git@github.com:smart-freight-center/sfc-backend.git",
  "lint-staged": {
    "**/*.js": "eslint --fix",
    "**/*.ts": "eslint --fix",
    "**/*.tsx": "eslint --fix",
    "**/*.json": "prettier --write",
    "**/*.{md,mdx}": "prettier --write"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc && rm -rf dist/__tests__ **/*.test.ts",
    "test:one-unit": "cross-env NODE_ENV=test NODE_PATH=src mocha --exit",
    "test:unit": "npm run test:one-unit --  'src/**/*.unit.test.ts'",
    "test:one-integration": "cross-env NODE_ENV=test NODE_PATH=src mocha --timeout 20000 --exit",
    "test:integration": "npm run test:one-integration -- 'src/**/*.integration.test.ts' "
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@think-it-labs/edc-connector-client": "^0.0.1-milestone-8.beta-4",
    "@think-it-labs/typed-error": "^0.2.0",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "tsc": "^2.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "@types/chai": "^4.3.4",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.13",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "commitlint-plugin-function-rules": "^1.7.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
